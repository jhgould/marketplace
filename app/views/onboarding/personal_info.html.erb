<h2>Personal Information</h2>
<%= form_for @user, url: wizard_path, method: :put do |f| %>
    <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, required: true %>
    </div>
    <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, required: true %>
    </div>
    <div>
        <%= f.label :street_address %>
        <%= f.text_field :street_address, required: true %>
    </div>
    <div>
        <%= f.label :unit_number %>
        <%= f.text_field :unit_number, required: true %>
    </div>
    <div>
        <%= f.label :city %>
        <%= f.text_field :city, required: true %>
    </div>
    <div>
        <%= f.label :state %>
        <%= f.text_field :state, required: true %>
    </div>
    <div>
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, required: true %>
    </div>
    <div>
        <%= f.label :country %>
        <%= f.text_field :country, required: true %>
    </div>
    <div>
        <%= link_to "Back" , wizard_path(wizard_steps[wizard_steps.index(step) - 1]) if wizard_steps.index(step).positive? %>
        <%= f.submit "Next" %>
    </div>
<% end %>