<h2>Personal Information</h2>
<%= form_for @user, url: wizard_path, method: :put do |f| %>
    <div>
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
    </div>
    <div>
        <%= f.label :last_name %>
            <%= f.text_field :last_name %>
    </div>
    <div>
        <%= f.label :street_address %>
            <%= f.text_field :street_address %>
    </div>
    <div>
        <%= f.label :unit_number %>
            <%= f.text_field :unit_number %>
    </div>
    <div>
        <%= f.label :city %>
            <%= f.text_field :city %>
    </div>
    <div>
        <%= f.label :state %>
            <%= f.text_field :state %>
    </div>
    <div>
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code %>
    </div>
    <div>
        <%= f.label :country %>
            <%= f.text_field :country %>
    </div>
    <div>
        <%= link_to "Back" , wizard_path(wizard_steps[wizard_steps.index(step) - 1]) if wizard_steps.index(step).positive? %>
        <%= f.submit "Next" %>
    </div>
<% end %>