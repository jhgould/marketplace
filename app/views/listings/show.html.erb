<div class="container mt-4">
  <div class="row">
    <div class="col-12 mb-4">
      <%= link_to 'â† Back to Listings', listings_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <% if @listing.images.attached? %>
        <div id="listingCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @listing.images.each_with_index do |image, index| %>
              <div class="carousel-item <%= 'active' if index.zero? %>">
                <%= image_tag image, class: "d-block w-100 rounded", style: "height: 400px; object-fit: cover;" %>
              </div>
            <% end %>
          </div>
          <% if @listing.images.count > 1 %>
            <button class="carousel-control-prev" type="button" data-bs-target="#listingCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#listingCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          <% end %>
        </div>
      <% else %>
        <div class="bg-light text-center p-5 rounded">
          <p class="mb-0">No images available</p>
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title mb-3"><%= @listing.title %></h1>
          <h4 class="text-primary mb-4">$<%= number_with_precision(@listing.price, precision: 2) %></h4>
          
          <div class="mb-4">
            <h5>Description</h5>
            <p class="card-text"><%= @listing.description %></p>
          </div>

          <div class="mb-4">
            <h5>Seller Information</h5>
            <p class="card-text">
            </p>
          </div>

          <% if current_user == @listing.user %>
            <div class="d-grid gap-2">
              <%= link_to 'Edit Listing', edit_listing_path(@listing), class: 'btn btn-secondary' %>
              <%= button_to 'Delete Listing', listing_path(@listing), 
                  method: :delete,
                  class: 'btn btn-danger w-100',
                  form: { data: { turbo_confirm: 'Are you sure you want to delete this listing?' } } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>